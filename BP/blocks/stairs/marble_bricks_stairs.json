{
	"format_version": "1.16.201",
	"minecraft:block": {
		"description": {
			"identifier": "forest:marble_bricks_stairs",
			"properties": {
				"forest:facing": [
					2,
					3,
					4,
					5,
					6
				],
				"forest:shape": [
					"straight",
					"inner",
					"outer"
				],
				"forest:half": [
					"bottom",
					"top"
				]
			}
		},
		"components": {
			"minecraft:block_light_absorption": 0,
			"minecraft:destroy_time": 2.1,
			"minecraft:creative_category": {
				"group": "itemGroup.name.stairs",
				"category": "construction"
			},
			"minecraft:explosion_resistance": 4.2,
			"tag:stone": {},
			"minecraft:material_instances": {
				"up": {
					"texture": "marble_bricks",
					"render_method": "opaque"
				},
				"down": {
					"texture": "marble_bricks",
					"render_method": "opaque"
				},
				"*": {
					"texture": "marble_bricks",
					"render_method": "opaque"
				}
			},
			"minecraft:pick_collision": {
				"origin": [
					-8,
					0,
					-8
				],
				"size": [
					16,
					16,
					16
				]
			},
			"minecraft:entity_collision": {
				"origin": [
					-8,
					0,
					-8
				],
				"size": [
					16,
					8,
					16
				]
			},
			"minecraft:on_player_placing": {
				"event": "forest:place_block"
			}
		},
		"permutations": [
			{
				"name": "facing=north half=bottom",
				"condition": "query.block_property('forest:facing') == 2 && query.block_property('forest:half') == 'bottom'",
				"components": {
					"minecraft:rotation": [
						0,
						90,
						0
					]
				}
			},
			{
				"name": "facing=south half=bottom",
				"condition": "query.block_property('forest:facing') == 3 && query.block_property('forest:half') == 'bottom'",
				"components": {
					"minecraft:rotation": [
						0,
						-90,
						0
					]
				}
			},
			{
				"name": "facing=west half=bottom",
				"condition": "query.block_property('forest:facing') == 4 && query.block_property('forest:half') == 'bottom'",
				"components": {
					"minecraft:rotation": [
						0,
						180,
						0
					]
				}
			},
			{
				"name": "facing=east half=bottom",
				"condition": "query.block_property('forest:facing') == 5 && query.block_property('forest:half') == 'bottom'",
				"components": {
					"minecraft:rotation": [
						0,
						0,
						0
					]
				}
			},
			{
				"name": "facing=north half=top",
				"condition": "query.block_property('forest:facing') == 2 && query.block_property('forest:half') == 'top'",
				"components": {
					"minecraft:rotation": [
						180,
						90,
						0
					]
				}
			},
			{
				"name": "facing=south half=top",
				"condition": "query.block_property('forest:facing') == 3 && query.block_property('forest:half') == 'top'",
				"components": {
					"minecraft:rotation": [
						180,
						-90,
						0
					]
				}
			},
			{
				"name": "facing=west half=top",
				"condition": "query.block_property('forest:facing') == 4 && query.block_property('forest:half') == 'top'",
				"components": {
					"minecraft:rotation": [
						180,
						180,
						0
					]
				}
			},
			{
				"name": "facing=east half=top",
				"condition": "query.block_property('forest:facing') == 5 && query.block_property('forest:half') == 'top'",
				"components": {
					"minecraft:rotation": [
						180,
						0,
						0
					]
				}
			},
			{
				"name": "shape=straight",
				"condition": "query.block_property('forest:shape') == 'straight'",
				"components": {
					"minecraft:geometry": "geometry.stair_block"
				}
			},
			{
				"name": "shape=inner",
				"condition": "query.block_property('forest:shape') == 'inner'",
				"components": {
					"minecraft:geometry": "geometry.inner_stair_block"
				}
			},
			{
				"name": "shape=outer",
				"condition": "query.block_property('forest:shape') == 'outer'",
				"components": {
					"minecraft:geometry": "geometry.outer_stair_block"
				}
			}
		],
		"events": {
			"forest:change_shape": {
				"sequence": [
					{
						"condition": "query.block_property('forest:shape')=='outer'",
						"set_block_property": {
							"forest:shape": "'straight'"
						}
					},
					{
						"condition": "query.block_property('forest:shape')=='inner'",
						"set_block_property": {
							"forest:shape": "'outer'"
						}
					},
					{
						"condition": "query.block_property('forest:shape')=='straight'",
						"set_block_property": {
							"forest:shape": "'inner'"
						}
					}
				]
			},
			"forest:place_block": {
				"sequence": [
					{
						"set_block_property": {
							"forest:facing": "(query.cardinal_facing_2d)"
						}
					},
					{
						"condition": "query.target_x_rotation<=4",
						"set_block_property": {
							"forest:half": "'top'"
						}
					}
				]
			}
		}
	}
}